# Flickr API Configuration
API_KEY="your_api_key_here"
API_SECRET="your_api_secret_here"

# Download Configuration
DOWNLOAD_DIR="/path/to/your/download/directory"
DOWNLOAD_VIDEO=false
MAX_WORKERS=1
API_CALL_DELAY=1.1

# Albums to Skip (JSON format)
# Note: "Auto Upload" is ALWAYS skipped automatically
# Add other albums you want to skip:
SKIP_ALBUMS=["Screenshots", "Camera Roll", "Test Album"]

# Alternative: Skip no additional albums (Auto Upload still skipped automatically)
# SKIP_ALBUMS=[]
